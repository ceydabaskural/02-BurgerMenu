@model List<_02_BurgerMenu.Entities.Testimonial>
@{
    ViewBag.Title = "ReferanceList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslarımız</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Referans No</th>
                            <th>Müşteri Adı</th>
                            <th>Yorumu</th>
                            <th>Görsel</th>
                            <th>Durumu</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Comment</td>
                                <td><img src="@item.ImageUrl" height="50" width="50" /></td>
                                @if (item.Status == true)
                                {
                                    <td style="color:seagreen"><b>Aktif</b></td>
                                }
                                else
                                {
                                    <td style="color:darkred"><b>Pasif</b></td>
                                }
                                <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
