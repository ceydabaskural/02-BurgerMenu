@model  List<_02_BurgerMenu.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori No</th>
                            <th>Kategori Adı</th>
                            <th>Kategori Ürünleri</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Admin/Category/CategoryDetail/@item.CategoryId" class="btn btn-warning">Kategori Ürünleri</a></td>
                                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>

