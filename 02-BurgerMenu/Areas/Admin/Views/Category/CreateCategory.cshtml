@model _02_BurgerMenu.Entities.Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card"> 
        <div class="col-9 card-body  ">
            <h4 class="card-title">Yeni Kategori Girişi</h4>
            <br />
            <form method="post">
                <label>Kategori Adı</label>
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                
            <br />
            <button class="btn btn-dark">Ekle</button>
            </form>
        </div>
    </div>
</div>
