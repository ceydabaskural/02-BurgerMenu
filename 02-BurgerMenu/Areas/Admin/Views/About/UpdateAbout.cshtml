@model _02_BurgerMenu.Entities.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Güncelleme</h4>

            <form method="post">
                @Html.HiddenFor(x => x.AboutId)

                <label>Üst Başlık</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                <br />
                <label>Alt Başlık</label>
                @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
                <br />
                <label>Açıklama</label>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                <br />

                <button class="btn btn-success">Güncelle</button>
            </form>

        </div>
    </div>


