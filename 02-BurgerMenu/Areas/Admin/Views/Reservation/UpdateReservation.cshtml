@model _02_BurgerMenu.Entities.Reservation
@{
    ViewBag.Title = "UpdateReservation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervasyon Güncelleme</h4>

            <form method="post">
                @Html.HiddenFor(x => x.ReservationId)

                <label>Adı</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <br />
                <label>Soyadı</label>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                <br />
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <br />
                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                <br />
                <label>Kişi Sayısı</label>
                @Html.TextBoxFor(x => x.PersonCount, new { @class = "form-control" })
                <br />
                <label>Tarih</label>
                @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                <br />
                <label>Saat</label>
                @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                <br />
                <label>Mesaj</label>
                @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                <br />
                <label>Durumu</label>
                <br />
                @*@Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })*@
                <select name="reservationStatus">
                    <option>Onaylandı</option>
                    <option>Onay Bekliyor</option>
                    <option>Tamamlandı</option>
                    <option>İptal Edildi</option>
                </select>
                <br />

                <button class="btn btn-success">Güncelle</button>
            </form>

        </div>
    </div>




