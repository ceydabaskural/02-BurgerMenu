@model _02_BurgerMenu.Entities.Reservation
@{
    ViewBag.Title = "CreateReservation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="col-9 card-body  ">
            <h4 class="card-title">Yeni Rezervasyon Girişi</h4>
            <br />
            <form method="post">
                <label>Ad</label>
                @Html.TextBoxFor(x => x.Name,new { @class = "form-control" })
                <br />
                <label>Soyad</label>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                <br />
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <br />
                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                <br />
                <label>Kişi Sayısı</label>
                @Html.TextBoxFor(x => x.PersonCount, new { @class = "form-control" })
                <br />
                <label>Tarih</label>
                @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                <br />
                <label>Saat</label>
                @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                <br />
                <label>Mesaj</label>
                @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                <br />
                <label>Durumu</label>
                <br />
                @*@Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })*@
                <select name="reservationStatus">
                    <option>Onaylandı</option>
                    <option>Onay Bekliyor</option>
                    <option>Tamamlandı</option>
                    <option>İptal Edildi</option>
                </select>
                <br />
                <br />
                <button class="btn btn-dark">Ekle</button>
            </form>
        </div>
    </div>
</div>


