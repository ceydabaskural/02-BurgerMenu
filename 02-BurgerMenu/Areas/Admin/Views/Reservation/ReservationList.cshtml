@model  List<_02_BurgerMenu.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervasyonlar</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Rezervasyon No</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Email</th>
                            <th>Telefon Numarası</th>
                            <th>Kişi Sayısı</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Mesaj</th>
                            <th>Durumu</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.PersonCount</td>
                                <td>@item.ReservationDate</td>
                                <td>@item.Time</td>
                                <td>@item.Message</td>
                                @if (item.ReservationStatus == "Onaylandı")
                                {
                                    <td><p style="background-color:lightgray"><b>@item.ReservationStatus</b></p></td>
                                }
                                else if (item.ReservationStatus == "Onay Bekliyor")
                                {
                                    <td><p style="background-color:burlywood"><b>@item.ReservationStatus</b></p></td>
                                }
                                else if ((item.ReservationStatus == "İptal Edildi"))
                                {
                                    <td><p style="background-color:lemonchiffon"><b>@item.ReservationStatus</b></p></td>
                                }
                                else
                                {
                                    <td><p style="background-color:lightgreen"><b>@item.ReservationStatus</b></p></td>
                                }


                                <td><a href="/Admin/Reservation/ReservationStatusPending/@item.ReservationId" class="btn btn-warning">Onay Bekliyor</a></td>
                                <td><a href="/Admin/Reservation/ReservationStatusCancelled/@item.ReservationId" class="btn btn-danger ml-2">İptal Edildi</a></td>
                                <td> <a href="/Admin/Reservation/ReservationStatusApproved/@item.ReservationId" class="btn btn-secondary ml-2">Onaylandı</a></td>
                                <td> <a href="/Admin/Reservation/ReservationStatusCompleted/@item.ReservationId" class="btn btn-inverse-success ml-2">Tamamlandı</a></td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" style="color:black" class="btn btn-success ml-2">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Reservation/CreateReservation" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
            </div>
        </div>
    </div>
</div>



